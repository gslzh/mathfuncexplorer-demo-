              },
              {
                "step": 2,
                "title": "横坐标缩小1/2",
                "content": "y = sin(x + π/3) → y = sin(2x + π/3)",
                "formula": "横坐标缩小1/k：f(x) → f(kx)"
              },
              {
                "step": 3,
                "title": "纵坐标扩大2倍",
                "content": "y = sin(2x + π/3) → y = 2sin(2x + π/3)",
                "formula": "纵坐标扩大k倍：f(x) → kf(x)"
              },
              {
                "step": 4,
                "title": "向上平移1个单位",
                "content": "y = 2sin(2x + π/3) → y = 2sin(2x + π/3) + 1",
                "formula": "上移k个单位：f(x) → f(x)+k"
              }
            ],
            "finalAnswer": "y = 2sin(2x + π/3) + 1"
