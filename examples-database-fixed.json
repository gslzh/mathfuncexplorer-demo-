          "title": "正弦函数的零点问题",
          "difficulty": "中等",
          "tags": ["零点", "方程"],
          "question": {
            "text": "求函数 f(x) = 2sin(x - π/6) 在区间[0, 2π]内的所有零点。",
            "type": "零点问题"
          },
          "solution": {
            "steps": [
              {
                "step": 1,
                "title": "建立方程",
                "content": "令 f(x) = 0，即 2sin(x - π/6) = 0",
                "formula": "sin(x - π/6) = 0"
              },
              {
                "step": 2,
                "title": "求通解",
                "content": "sin(t) = 0 的通解为 t = kπ (k∈Z)",
                "formula": "x - π/6 = kπ"
              },
              {
                "step": 3,
                "title": "解出x",
                "content": "x = kπ + π/6 (k∈Z)",
                "formula": "x = π/6 + kπ"
              },
              {
                "step": 4,
                "title": "确定区间内的解",
                "content": "在[0, 2π]内：k=0时x=π/6，k=1时x=7π/6",
                "formula": "0 ≤ π/6 + kπ ≤ 2π"
              }
            ],
            "finalAnswer": "零点为 x = π/6 和 x = 7π/6"
          },
          "concepts": [
            {
              "name": "三角方程",
              "definition": "含有三角函数的方程"
            }
          ],
